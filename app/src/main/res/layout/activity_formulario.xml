<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b5998 "
    tools:context=".Formulario">

    <EditText
        android:id="@+id/marcador"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:background="#F3EEEE"
        android:ems="10"
        android:hint="Marcador"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitud" />

    <EditText
        android:id="@+id/latitud"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:background="#F3EEEE"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/longitud"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:autofillHints=""
        android:background="#F3EEEE"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latitud" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#00FFFFFF"
        android:text="@string/textFacebook"
        android:textColor="#FBFBFB"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="351dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:background="#2C2E8C"
        android:onClick="Maps"
        android:text="@string/BtnEnviar"
        app:backgroundTint="#2C2E8C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marcador" />

</androidx.constraintlayout.widget.ConstraintLayout>